#	ar -rsc libExos.a exos.o
#	rm *.o


exoX:
	gcc $(FLAGS) exoX.c -o exoX





distdir: 
	rm -rf $(DISTDIRNAME)
	mkdir $(DISTDIRNAME)
	cp $(FILESFORDIST) $(DISTDIRNAME)


dist: clean distdir
	zip -r [$(COURS)]_$(DEVOIR)_$(PROGRAMMER).zip $(DISTDIRNAME)
	rm -rf $(DISTDIRNAME)


clean:
	rm -f $(PROGS)

