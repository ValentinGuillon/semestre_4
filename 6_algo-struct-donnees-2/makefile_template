
COURS = ASD2
DEVOIR = test
PROGRAMMER = GUILLON-Valentin-20002588
DISTDIRNAME = $(COURS)_$(DEVOIR)_$(PROGRAMMER)
FILESFORDIST = makefile exoX.c exo2.c


FLAGS = -Wall -Wextra -g
PROGS = exoX

all: $(PROGS)


